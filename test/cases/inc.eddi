void main(){
    test_int();
    test_arrays();
}

void test_int(){
    int a = 0;
    print(a);
    print("|");

    a++;
    print(a);
    print("|");

    ++a;
    print(a);
    print("|");

    --a;
    print(a);
    print("|");

    a--;
    print(a);
    print("|");

    int b = ++a;
    print(b);
    print("|");
    
    b = a++;
    print(b);
    print("|");
}

void test_arrays(){
    int array[3];
    
    ++array[2];
    print(array[2]);
    print("|");
    
    print(array[2]++);
    print("|");
    
    print(array[2]);
    print("|");
    
    --array[2];
    print(array[2]);
    print("|");
    
    print(array[2]--);
    print("|");
    
    print(array[2]);
    print("|");
}
