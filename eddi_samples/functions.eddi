include<print>

void main(){
    println(sum(0));
    println(sum(4));
    println(sum(5));

    println(my_factorial(9));
}

int sum(int a){
    if(a == 0){
        return 0;
    }

    return a + sum(a - 1);
}

int my_factorial(int n){
    if(n == 0){
        return 1;
    }

    return n * my_factorial(n - 1);
}
